<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="login.ProfilePage"
             Title="ProfilePage">
    <VerticalStackLayout Padding="24" Spacing="12">
        <Label Text="hi~" FontSize="24" FontAttributes="Bold"/>
        <!--frame for message that pass to this page-->
        <Frame Padding="14" CornerRadius="12">
            <VerticalStackLayout Spacing="6">
                <Label x:Name="LblUsername"/>
                <Label x:Name="LblEmail"/>
                <Label Text="Your account has been created." FontAttributes="Bold"/>
                
            </VerticalStackLayout>
        </Frame>


        <Button Text="Sign out" Clicked="OnSignOut"/>
    </VerticalStackLayout>
</ContentPage>