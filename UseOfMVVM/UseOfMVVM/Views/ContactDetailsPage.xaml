<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:UseOfMVVM.ViewModels"
             x:Class="UseOfMVVM.Views.ContactDetailsPage"
             x:DataType="vm:ContactDetailViewModel"
             Title="ContactDetailsPage">
    <VerticalStackLayout Padding="20" Spacing="10">
        <Label Text="{Binding Contact.Name}"
               FontSize="22"
               FontAttributes="Bold"/>


        <Label Text="{Binding Contact.Email}"/>
        <Label Text="{Binding Contact.Phone}"/>
        <Label Text="{Binding Contact.Description}"
               LineBreakMode="WordWrap"/>

        <Button Text="Back to Contacts"
                Clicked="OnBackClicked"/>

    </VerticalStackLayout>
</ContentPage>